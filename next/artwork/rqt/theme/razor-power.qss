QWidget {

	color: #DDDDDD;
}

Dialog {
    border: 1px solid #B0B0B0;
	background-color: #4D4C47;

}

QToolButton {
    border: 1px solid #33322E;
}

QToolButton:focus,
QToolButton:hover {
	background-color: #555555;
}


#hibernateButton,
#logoutButton,
#rebootButton,
#shutdownButton,
#suspendButton {
    qproperty-iconSize: 48px;
    min-width: 80px;
    min-height: 80px;
    border-radius: 5px;
}


#cancelButton {
	qproperty-icon: url(razor-power/cancel.png);
    border-radius: 3px;
    padding: 4px;
}

#hibernateButton {
	qproperty-icon: url(razor-power/hibernate.png);
}

#logoutButton {
	qproperty-icon: url(razor-power/logout.png);
}

#rebootButton {
	qproperty-icon: url(razor-power/reboot.png);
}

#shutdownButton {
	qproperty-icon: url(razor-power/shutdown.png);
}

#suspendButton {
	qproperty-icon: url(razor-power/suspend.png);
}
