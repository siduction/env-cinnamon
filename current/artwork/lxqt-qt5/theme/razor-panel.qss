/*
 * General panel settings
 */
RazorPanel {
    background-color:qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #5C5B56, stop:0.25 #53524E, stop: 0.5 #4D4C47, stop: 0.75 #45442F, stop:1 #3C3B37);
}

/* PositionBottom */
RazorPanel[position="0"] {
    border-top: 1px solid #33322E;
}


/* PositionTop */
RazorPanel[position="1"] {
    border-bottom: 1px solid #33322E;
}

/*
 * General plugins settings
 */
RazorPanelPlugin {
    margin: 2px 0 2px 0;
    padding: 0;
    spacing: 20px;
}


RazorPanelPlugin > QToolButton {
    margin: 0;
    border: 1px solid transparent;
    border-radius: 3px;
    qproperty-iconSize: 24px;
    color: #aaaaaa;
}


RazorPanelPlugin > QToolButton:hover{
    margin: 0;
    border: 1px solid #33322E;
    color: #cacaca;
}

/*
 * Desktopswitch
 */
#DesktopSwitch {}

#DesktopSwitch QToolButton {
    margin: 1px;
    color: #cccccc;
    border: 1px solid #4a4a4a;
    background: rgba(0, 0, 0, 5%);
}

#DesktopSwitch QToolButton:on {
    background: rgba(0, 0, 0, 40%);
    border: 1px solid #4a4a4a;
}

#DesktopSwitch QToolButton:hover {
    border: 1px solid #7f7f7f;
}

/*
 * QuickLaunch
 */
#QuickLaunch {
    margin-left: 2px;
    margin-right: 2px;
}

/*
 * TaskBar
 */
#TaskBar {
     margin-right: 2px;
     margin-left: 2px;
}

#TaskBar QToolButton{
     border: 1px solid #4a4a4a;
     qproperty-iconSize: 16px;
}

#TaskBar QToolButton:on{
    background: rgba(0, 0, 0, 40%);
    border: 1px solid #4a4a4a;
}

#TaskBar QToolButton:hover{
   border: 1px solid #7f7f7f;
}

/*
 * Clock
 */
#Clock > QWidget > QLabel{
    font-size: 10pt;
    margin-right: 2px;
    color: #F2F1F0;
}

/*
 * Tray
 */
#Tray {
    min-width: 6px;
    padding-left: 2px;
    padding-right: 2px;
    margin-left: 4px;
    margin-right: 4px;
    qproperty-iconSize: 24px;
}

TrayIcon {
    margin: 2px;
}

/*
 * Main menu
 */
#MainMenu {
    border: 0;
}

#MainMenu > QToolButton {
    margin-left: 2px;
    margin-right: 2px;
    border: 1px solid #E0875A;
    border-radius: 3px;
    background: qlineargradient(x1:1, y1:0, x2:0, y2:1, stop:0 #EB743D, stop:0.3 #E76C41, stop:1 #C94C21);
    qproperty-icon: url(mainmenu.png);
    color: rgba(0, 0, 0, 80%);

}

#MainMenu  QMenu {
    background-color: #4E4D48;
    border: 1px solid #33322E;
}

#MainMenu QMenu::item {
    color: #CCCCCC;
}

#MainMenu QMenu::item:selected {
    color: #EEEEEE;
    background: rgba(0, 0, 0, 40%);
}

/*
 * Mount plugin
 */

MountButton {
    qproperty-iconSize: 24px;
}

MountButton:hover {
    margin: 0;
    border: 2px solid transparent;
}

MountButton:pressed {
    border: 2px solid transparent;
}

#RazorMountPopup {
    background-color: #5c5b56;
}

#RazorMountPopup > QLabel {
    color: #ffffff;
}

/*
 * Screensaver
 */
#PanelScreenSaver > QToolButton:hover {
    margin: 0;
    border: 2px solid transparent;
}

#PanelScreenSaver > QToolButton:pressed {
    margin: 2px;
    border: 2px solid transparent;
}

/*
 * ShowDesktop
 */
#ShowDesktop > QToolButton:hover {
    margin: 0px;
    border: 2px solid transparent;
}

#ShowDesktop > QToolButton:pressed {
    margin: 2px;
    border: 2px solid transparent;
}
