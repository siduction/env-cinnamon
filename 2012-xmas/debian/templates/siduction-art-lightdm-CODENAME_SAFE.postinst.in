#!/bin/sh
# postinst script for #PACKAGE#
#
# see: dh_installdeb(1)

set -e

case "$1" in
    configure)
        # background=/usr/share/images/desktop-base/login-background.svg
        sed -i "s#background=.*#background=/usr/share/lightdm/themes/default.png#"  /etc/lightdm/lightdm-gtk-greeter.conf
        update-alternatives --install /usr/share/lightdm/themes/default.png lightdm_background /usr/share/lightdm/themes/siduction-@CODENAME_SAFE@/default.png 100
        #
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

#DEBHELPER#

exit 0

